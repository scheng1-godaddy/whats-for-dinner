<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body>
    <div class="container-fluid">
        <% include ../partials/nav %>
        <h1>Edit User</h1>
        <% if (currentUser) { %>
        <form action="/users/<%=currentUser.username%>?_method=PUT" method="POST">
            <label for="fname">First Name</label>
            <input id="fname" type="text" name="fname" value="<%=currentUser.fname%>">
            <label for="lname">Last Name</label>
            <input id="lname" type="text" name="lname" value="<%=currentUser.lname%>">
            <label for="email">Email</label>
            <input id="email" type="email" name="email" value="<%=currentUser.email%>">
            <label for="username">Username</label>
            <input id="username" type="text" name="username" value="<%=currentUser.username%>">
            <input type="submit">
        </form>
        <form action="/users/<%=currentUser.username%>?_method=DELETE" method="POST">
            <input type="submit" value="Remove Account" onclick="return confirm('Are you sure?')">
        </form>
        <% } else { %>
            Couldn't find user
        <% } %>
    </div>
    <% include ../partials/script %>
</body>
</html>