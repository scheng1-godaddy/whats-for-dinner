<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head %>
</head>

<body class="home-body">
    <div class="container-fluid">
        <% include ../partials/nav %>
            <div class="form-background">
                <div class="home-content">
                    <div class="form-header">
                        <h1 class="display-4">Create New User</h1>
                    </div>
                    <div class="form-content">
                        <div class="form-entries-container">
                            <form action="/users/" method="POST">
                                <div class="form-group">
                                    <label for="fname">First Name</label>
                                    <input class="form-control" id="fname" type="text" name="fname">
                                </div>
                                <div class="form-group">
                                    <label for="lname">Last Name</label>
                                    <input class="form-control" id="lname" type="text" name="lname">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input class="form-control" id="email" type="email" name="email">
                                </div>
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input class="form-control" id="username" type="text" name="username">
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input class="form-control" id="password" type="password" name="password">
                                </div>
                                <div class="form-group">
                                    <label for="img">Image URL</label>
                                    <input class="form-control" id="img" type="text" name="img">
                                </div>
                                <input class="btn btn-primary btn-lg" type="submit">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <% include ../partials/script %>
</body>

</html>