<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body>
    <div class="container-fluid">
        <% include ../partials/nav %>
        <div class="user-header">
            <img src="<%=user.img%>" alt="">
            <h3><%=user.username%></h3>
        </div>
        <% if (owner) { %>
            <h1>User Dashbboard Admin</h1>
        <% } else { %>
            <h1>User Dashbboard Public</h1>
        <% } %>
        <div class="header-nav">
            <ul>
                <% if (currentUser) { %>
                    <form action="/sessions?_method=DELETE" method="POST">
                        <input type="submit" value="Logout">
                    </form>
                <% } else { %>
                    <a href="/sessions/new">Login</a>
                <% } %>
            </ul>
        </div>
        <div>
            <% if (currentUser) { %>
                You are logged in as <%=currentUser.username %><br />
            <% } else { %>
                You are not logged in
            <% } %>
            
            <% if (owner) { %>
                <a href="/users/<%=currentUser.username%>/edit">Edit Profile</a>
                <a href="/entries/new">Create an entry</a>
            <% } %>
            

            <% if (userEntries) { %>
                <% for(let i=0; i < userEntries.length; i++) { %>
                    <div class="entry-preview">
                        <a href="/entries/<%=userEntries[i]._id%>">
                            <h3>
                                <%=userEntries[i].title%>
                            </h3>
                            <img src="<%=userEntries[i].img[0]%>" alt="">
                        </a>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
    <% include ../partials/script %>
</body>
</html>