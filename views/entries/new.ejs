<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head %>
</head>

<body class="home-body">
    <div class="container-fluid">
        <% include ../partials/nav %>
            <div class="form-background">
                <div class="home-content">
                    <div class="form-header">
                        <h1 class="display-4">Create New Entry</h1>
                    </div>
                    <div class="form-content">
                        <div class="form-entries-container">
                            <form action="/entries/" method="POST">
                                <div class="form-group">
                                    <label for="title">Title</label>
                                    <input class="form-control" id="title" type="text" name="title">
                                </div>
                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <textarea class="form-control" name="description" id="description" cols="30" rows="10"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="category">Category</label>
                                    <select class="form-control" id="category" name="category">
                                        <option value="entree">Entree</option>
                                        <option value="appetizer">Appetizer</option>
                                        <option value="dessert">dessert</option>
                                        <option value="side">side</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="img">Image URLs</label>
                                    <input class="form-control" type="text" name="img" placeholder="image url 1">
                                    <input class="form-control" type="text" name="img" placeholder="image url 2">
                                    <input class="form-control" type="text" name="img" placeholder="image url 3">
                                    <input class="form-control" type="text" name="img" placeholder="image url 4">
                                    <input class="form-control" type="text" name="img" placeholder="image url 5">
                                </div>
                                <input type="submit" class="btn btn-primary">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <% include ../partials/script %>
</body>

</html>